{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
